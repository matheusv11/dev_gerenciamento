<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-primary"> Nova categoira</button></a>
{{#each categorias}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{this.nome}}</h4>
      <small>{{this.slug}}</small>
      <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-primary">Editar</button></a>

      <form action="/admin/categorias/deletar" method="post">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger">Deletar</button>
      </form>
    </div>
  </div>
{{else}}

{{/each}}
